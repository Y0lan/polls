# MODIFY THIS!!!
spring.datasource.password= <MYSQL_PASSWORD>
app.jwtSecret= <JWT_SECRET>



## Propriété du serveur
server.port= 8080

## Database

spring.datasource.url= jdbc:mysql://db:3306/polls?useSSL=false&serverTimezone=Etc/UTC&allowPublicKeyRetrieval=true
spring.datasource.username= root
spring.datasource.initialization-mode=always
# Automatique update des tables dans la database
spring.jpa.hibernate.ddl-auto = update

## Propriété Hibernate

# Hibernate + MYSQL  optimisation
spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQL5InnoDBDialect

## Logging
logging.level.org.hibernate.SQL= DEBUG

## Jackson
spring.jackson.serialization.WRITE_DATES_AS_TIMESTAMPS= false
spring.jackson.time-zone= ECT


# One week
app.jwtExpirationInMs= 604800000
